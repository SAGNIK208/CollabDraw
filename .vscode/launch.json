{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug TurboRepo App",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/node_modules/.bin/pnpm",
      "args": ["pnpm", "run", "dev"],
      "env": {
        "NODE_ENV": "development"
      },
      "runtimeArgs": ["--inspect-brk"],
      "outFiles": ["${workspaceFolder}/**/*.js"]
    }
  ]
}
